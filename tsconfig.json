{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@/tests/*": ["tests/*"]
        }
    },
    "include": ["src", "tests"]
}
